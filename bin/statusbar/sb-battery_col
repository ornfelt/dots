#!/bin/sh

# Prints all batteries, their percentage remaining and an emoji corresponding
# to charge status (ðŸ”Œ for plugged up, ðŸ”‹ for discharging on battery, etc.).

case $BLOCK_BUTTON in
	1) pamixer -t; kill -44 $(pidof dwmblocks) ;;
	2) rofi -theme "~/.config/rofi/themes/gruvbox/gruvbox-dark.rasi" -e "Audio clicked 2" ;;
	3) rofi -theme "~/.config/rofi/themes/gruvbox/gruvbox-dark.rasi" -e "Audio clicked 3" ;;
	4) pamixer --allow-boost -i 1; kill -44 $(pidof dwmblocks) ;;
	5) pamixer --allow-boost -d 1; kill -44 $(pidof dwmblocks) ;;
	6) "$TERMINAL" -e "$EDITOR" "$0" ;;
esac

# Loop through all attached batteries and format the info
# for battery in /sys/class/power_supply/BAT?*; do
# 	# If non-first battery, print a space separator.
# 	[ -n "${capacity+x}" ] && printf " "
# 	# Sets up the status and capacity
# 	case "$(cat "$battery/status")" in
# 		"Full") status="âš¡" ;;
# 		"Discharging") status="ðŸ”‹" ;;
# 		"Charging") status="ðŸ”Œ" ;;
# 		"Not charging") status="ðŸ›‘" ;;
# 		"Unknown") status="â™»ï¸" ;;
# 	esac
# 	capacity=$(cat "$battery/capacity")
# 	# Will make a warn variable if discharging and low
# 	[ "$status" = "ðŸ”‹" ] && [ "$capacity" -le 25 ] && warn="â—"
# 	# Prints the info
# 	printf "%s%s%d%%" "$status" "$warn" "$capacity"; unset warn
# done && exit 0

# Loop through all attached batteries and format the info
for battery in /sys/class/power_supply/BAT?*; do
	# If non-first battery, print a space separator.
	[ -n "${capacity+x}" ] && printf " "
	# Sets up the status and capacity
	case "$(cat "$battery/status")" in
		"Full") status="ï‰€" ;;
		"Discharging") status="" ;;
		"Charging") status="ï–ƒ" ;;
		#"Charging") status="îŒ•ïƒ§ï®£âš¡ " ;;
		"Not charging") status="" ;;
		"Unknown") status="" ;;
	esac
	capacity=$(cat "$battery/capacity")
	# Will make a warn variable if discharging and low
	#[ "$status" = "ðŸ”‹" ] && [ "$capacity" -le 25 ] && warn="â—"

	# Prints the info
	if [[ $status = "ï‰€" ]]; then
		printf "%s  %s%d%%" "$status" "$warn" "$capacity"; unset warn
	elif [[ $status = "ï–ƒ" ]]; then
		printf "%s %s%d%%" "$status" "$warn" "$capacity"; unset warn
	elif (( $capacity > 85)); then
		printf "ï‰€  %s%s%d%%" "$status" "$warn" "$capacity"; unset warn
	elif (( $capacity > 60)); then
		printf "ï‰  %s%s%d%%" "$status" "$warn" "$capacity"; unset warn
	elif (( $capacity > 30 )); then
		printf "ï‰‚  %s%s%d%%" "$status" "$warn" "$capacity"; unset warn
	else
		printf "ï‰ƒ  %s%s%d%%" "$status" "$warn" "$capacity"; unset warn
	fi

done && exit 0
