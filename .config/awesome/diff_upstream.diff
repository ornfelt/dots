+-- toggle MOC widget
+awful.key({ altkey }, "0",
+        function ()
+            local common = { text = "MOC widget ", position = "top_middle", timeout = 2 }
+            if moc.timer.started then
+                moc.timer:stop()
+                common.text = common.text .. markup.bold("OFF")
+            else
+                moc.timer:start()
+                common.text = common.text .. markup.bold("ON")
+            end
+            naughty.notify(common)
+        end),
+```
