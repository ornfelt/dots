-    widget.icon:set_image(PATH_TO_ICONS .. batteryIconName .. '.svg')
-    -- Update popup text
-    battery_popup.text = string.gsub(stdout, '\n$', '')
-    collectgarbage('collect')
-  end,
-  widget
-)
